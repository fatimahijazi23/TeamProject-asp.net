@page
@model teamProject.WEB.Pages.HomeModel
@{
    ViewData["Title"] = "Join StepUp";
    Layout = null;
}
 
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .stepup-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        padding: 40px;
        max-width: 900px;
        width: 100%;
        animation: fadeInUp 0.8s ease-out;
        margin: 20px auto;
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .stepup-header { text-align: center; margin-bottom: 40px; }

    .stepup-header h1 {
        font-size: 2.5rem;
        color: #2c3e50;
        margin-bottom: 10px;
        animation: slideInDown 0.8s ease-out 0.2s both;
    }

    .stepup-header p {
        color: #7f8c8d;
        font-size: 1.1rem;
        animation: slideInDown 0.8s ease-out 0.4s both;
    }

    @@keyframes slideInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .account-types {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        margin-top: 30px;
    }

    .account-card {
        background: #f8f9fa;
        border: 2px solid transparent;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        animation: fadeInScale 0.8s ease-out;
    }

    .account-card:nth-child(1) { animation-delay: 0.6s; }
    .account-card:nth-child(2) { animation-delay: 0.8s; }

    @@keyframes fadeInScale {
        from { opacity: 0; transform: scale(0.9); }
        to { opacity: 1; transform: scale(1); }
    }

    .account-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .account-card:hover::before { left: 100%; }
    .account-card:hover { transform: translateY(-5px); box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1); border-color: #3498db; }
    .account-card.selected {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(52, 152, 219, 0.3);
    }

    .card-icon { font-size: 3rem; margin-bottom: 20px; color: #3498db; transition: all 0.3s ease; }
    .account-card.selected .card-icon { color: white; transform: scale(1.1); }

    .card-title { font-size: 1.5rem; font-weight: 600; margin-bottom: 20px; color: #2c3e50; transition: color 0.3s ease; }
    .account-card.selected .card-title { color: white; }

    .features { text-align: left; }
    .feature { display: flex; align-items: center; margin-bottom: 12px; opacity: 0; animation: slideInLeft 0.5s ease-out forwards; }
    .feature:nth-child(1) { animation-delay: 1s; }
    .feature:nth-child(2) { animation-delay: 1.1s; }
    .feature:nth-child(3) { animation-delay: 1.2s; }
    .feature:nth-child(4) { animation-delay: 1.3s; }
    .feature:nth-child(5) { animation-delay: 1.4s; }
    .feature:nth-child(6) { animation-delay: 1.5s; }

    @@keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .checkmark { color: #27ae60; margin-right: 10px; font-weight: bold; font-size: 1.1rem; transition: all 0.3s ease; }
    .account-card.selected .checkmark { color: #a8e6cf; }

    .feature-text { color: #6c757d; font-size: 0.95rem; transition: color 0.3s ease; }
    .account-card.selected .feature-text { color: rgba(255, 255, 255, 0.9); }

    .select-button {
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        border: none;
        border-radius: 25px;
        padding: 12px 30px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .select-button:hover { transform: translateY(-2px); box-shadow: 0 10px 25px rgba(52, 152, 219, 0.3); }
    .select-button:active { transform: translateY(0); }
    .account-card.selected .select-button { background: linear-gradient(135deg, #ffffff, #f8f9fa); color: #3498db; }

    .pulse { animation: pulse 2s infinite; }

    @@keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(52, 152, 219, 0.7); }
        70% { box-shadow: 0 0 0 10px rgba(52, 152, 219, 0); }
        100% { box-shadow: 0 0 0 0 rgba(52, 152, 219, 0); }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }
    .float { animation: float 3s ease-in-out infinite; }

    @@media (max-width: 768px) {
        .account-types { grid-template-columns: 1fr; gap: 20px; }
        .stepup-container { padding: 20px; }
        .stepup-header h1 { font-size: 2rem; }
        .account-card { padding: 20px; }
    }
</style>

<div class="stepup-container">
    <div class="stepup-header">
        <h1>Join StepUp</h1>
        <p>Choose your account type to get started</p>
    </div>
    
    <form method="post">
        <input type="hidden"
               asp-for="SelectedAccountType"
               id="selectedAccountType" />
        
        <div class="account-types">
            <div class="account-card" onclick="selectAccount(this, 'JobSeeker')">
                <div class="card-icon float">👤</div>
                <h2 class="card-title">Job Seeker</h2>
                <div class="features">
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Apply directly to jobs</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Upload CV with applications</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Follow companies for notifications</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Track application progress</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Personal profile & history</span></div>
                </div>
                <button type="button" class="select-button">Select Job Seeker</button>
            </div>
            
            <div class="account-card" onclick="selectAccount(this, 'Company')">
                <div class="card-icon float" style="animation-delay: 0.5s;">🏢</div>
                <h2 class="card-title">Company</h2>
                <div class="features">
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Create & manage job postings</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">View candidates testing CVs</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Dashboard with applicant fit status</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Label/manage applications</span></div>
                    <div class="feature"><span class="checkmark">✓</span><span class="feature-text">Company profile with logo</span></div>
                </div>
                <button type="button" class="select-button">Select Company</button>
            </div>
        </div>
    </form>
</div>

<script>
    function selectAccount(element, type) {
     
        document.querySelectorAll('.account-card').forEach(card => {
            card.classList.remove('selected', 'pulse');
        });

        element.classList.add('selected', 'pulse');

        document.getElementById('selectedAccountType').value = type;

        
        element.style.animation = 'none';
        requestAnimationFrame(() => element.style.animation = '');

        console.log('Selected account type:', type);

        
        setTimeout(() => {
            if (type === 'JobSeeker') {
                window.location.href = '@Url.Page("/JobSeeker/Register")';
            } else if (type === 'Company') {
                window.location.href = '@Url.Page("/Company/Register")';
            }
        }, 1500);
    }
</script>
