@page
@model teamProject.WEB.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
} 

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(to right, #007bff, #00c6ff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        max-width: 450px;
        margin: 80px auto;
        background: #fff;
        padding: 35px;
        border-radius: 15px;
        box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.2);
        animation: fadeInUp 1s ease-in-out;
    }

    .register-container h2 {
        font-weight: bold;
        text-align: center;
        margin-bottom: 25px;
        color: #007bff;
    }

    .btn-custom {
        background: #007bff;
        border: none;
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
    }

    .btn-custom:hover {
        background: #0056b3;
        transform: scale(1.05);
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
    }

    .login-link {
        text-align: center;
        margin-top: 15px;
    }

    .login-link a {
        color: #007bff;
        text-decoration: none;
    }

    .login-link a:hover {
        text-decoration: underline;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="register-container">
    <h2>Join StepUp</h2>
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input asp-for="Input.FullName" class="form-control"  required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Input.Email" type="email" class="form-control"  required />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Input.Password"
                   type="password"
                   class="form-control"
                 
                   required />
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control"  required />
        </div>
        <button type="submit" class="btn btn-custom">Create Account</button>
        <div class="login-link">
            Already have an account? <a asp-page="/Login">Login</a>
        </div>
    </form>
</div>
